<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="amr_robot">
    <gazebo>
        <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
            
            <!-- Misc configs -->
            <alwaysOn>true</alwaysOn>
            <legacyMode>false</legacyMode>
            <updateRate>10</updateRate>
            
            <!-- Wheel Information - FROM YOUR ROS1 CONFIG -->
            <wheel_separation>0.155</wheel_separation>
            <wheel_diameter>0.05</wheel_diameter>
            
            <!-- Joints - THESE MUST MATCH YOUR URDF -->
            <left_joint>left_wheel_joint</left_joint>
            <right_joint>right_wheel_joint</right_joint>
            
            <!-- Limits -->
            <max_wheel_torque>10</max_wheel_torque>
            <max_wheel_acceleration>2.0</max_wheel_acceleration>
            
            <!-- Topics -->
            <command_topic>cmd_vel</command_topic>
            <odometry_topic>odom</odometry_topic>
            
            <!-- Frames -->
            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>base_link</robot_base_frame>
            
            <!-- Outputs - KEY SETTINGS FOR SLAM! -->
            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>
            <publish_wheel_tf>true</publish_wheel_tf>
            
        </plugin>
    </gazebo>
</robot>